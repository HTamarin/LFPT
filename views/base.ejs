
<%- include('header') -%>


<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Système de connexion</h2>
            <span>Connexion pour l'utilisateur existant</span>
            <% if(locals.logout){ %>
                <div class="alter alert-success text-center">
                    <%= logout %>
                </div>
            <% } %>
        </div>
        <% if(locals.validate){ %>
            <div class="alter alert-success text-center">
            <%=validate %>
        </div>
            <%}%>
        <% if(locals.error){ %>
            <div class="alter alert-danger text-center">
                <%=error %>
            </div>
        <% } %>
        <form action="/route/login" method="POST" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-muted text-left">Enregistrer l'adresse électronique</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="mot de passe">
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Connexion</button>
        </form>
        <button style="margin-top: 10px;" class="btn btn-success rounded-pill" onclick="location.href='/route/register'">Creer un compte</button>
    </div>
</div>


<%- include('footer') -%>
